@model Mvc_Vize.Models.Yonetici

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/User_layout.cshtml";
}

<h2>Giriş Sayfası</h2>


@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.YoneticiAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YoneticiAd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YoneticiAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="YoneticiSoyad">Yönetici Şifre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.YoneticiSoyad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YoneticiSoyad, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Giriş Yap" class="btn btn-success" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}